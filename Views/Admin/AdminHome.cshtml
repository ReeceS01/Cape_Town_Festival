@{
    ViewData["Title"] = "Admin Home";
    ViewData["HideFooter"] = true;
}

<div class="container mt-5 text-center">
    <!-- AdminCTFestival Image -->
    <img src="/images/AdminCTFestival.png" alt="AdminCTFestival Logo" class="admin-logo">


    <h1 class="text-primary">Administrator Home Page</h1>
    <h3 class="text-secondary">Welcome, Admin!</h3>

    <!-- Dynamic Date and Time -->
    <h5 class="mt-3">
        Manage events and view dashboards for insights. <br>
        The current date today is <span id="current-date" class="fw-bold"></span> and the time is <span id="current-time" class="fw-bold"></span>.  
        <br>Select the pages you want to view:
    </h5>

    <!-- Admin Navigation Buttons -->
    <div class="mt-4">
        <a href="/Admin/AdminEventManagement" class="btn btn-primary btn-lg m-2">ðŸ“… Event Management</a>
        <a href="@Url.Action("Index", "Dashboard")" class="btn btn-info btn-lg m-2">ðŸ“Š View Statistics & Attendance Overview</a>
    </div>

    <!-- Logout Button -->
    <form method="post" action="/Admin/Logout" class="mt-4">
        <button type="submit" class="btn btn-danger btn-lg">ðŸšª Log Out</button>
    </form>
    <br><br><br>
</div>

<script>
    function updateDateTime() {
        const now = new Date();

        // Format date: "Monday, 26 February 2025"
        document.getElementById("current-date").innerText = now.toLocaleDateString('en-GB', {
            weekday: 'long', year: 'numeric', month: 'long', day: 'numeric'
        });

        // Format time: "14:30" (24-hour format without seconds)
        document.getElementById("current-time").innerText = now.toLocaleTimeString([], {
            hour: '2-digit', minute: '2-digit', hour12: false
        });
    }

    // Update the date and time immediately and refresh every 60 seconds
    updateDateTime();
    setInterval(updateDateTime, 60000);
</script>

